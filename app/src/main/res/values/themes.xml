<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础主题 -->
    <style name="Theme.ChineseHoliday" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主要颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- 次要颜色 -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- 背景颜色 -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        
        <!-- 文字颜色 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- 控件样式 -->
        <item name="materialButtonStyle">@style/Widget.ChineseHoliday.Button</item>
        <item name="textInputStyle">@style/Widget.ChineseHoliday.TextInputLayout</item>
        <item name="chipStyle">@style/Widget.ChineseHoliday.Chip</item>
    </style>
    
    <!-- 按钮样式 -->
    <style name="Widget.ChineseHoliday.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- 输入框样式 -->
    <style name="Widget.ChineseHoliday.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    
    <!-- Chip样式 -->
    <style name="Widget.ChineseHoliday.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/gray_light</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
</resources> 